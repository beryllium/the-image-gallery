{% extends 'layout.html.twig' %}

{% block title 'Image Gallery - ' %}

{% block body %}
    <h2>Image Gallery</h2>
    {% for image in images %}
        <img src="{{ app.request_stack.currentRequest.baseUrl }}/img/{{ image.id }}_small.jpg"><br>
    {% else %}
        <p><strong>Sorry, no images were found.</strong></p>
    {% endfor %}

    <br><br>
    <a href="{{ app.request_stack.currentRequest.baseUrl }}/">Upload some images &raquo;</a>
{% endblock %}
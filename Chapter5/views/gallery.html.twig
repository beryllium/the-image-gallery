{% extends 'layout.html.twig' %}

{% block sub_title 'Gallery - ' %}

{% block body %}
    <h2>Image Gallery</h2>
    {% for image in images %}
        <img src="{{ baseUrl }}/img/{{ image.id }}_small.jpg"><br>
    {% else %}
        <p><strong>Sorry, no images were found.</strong></p>
    {% endfor %}
    <br><br>
    <a href="{{ baseUrl }}/upload/">Upload some images &raquo;</a>
{% endblock %}